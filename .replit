modules = ["nodejs-20", "python-3.11", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd finetune-ERP-frontend-New && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd finetune-ERP-backend-New && python manage.py runserver 0.0.0.0:8000"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 36889
externalPort = 3000

[[ports]]
localPort = 46187
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd finetune-ERP-frontend-New && npm run build && cd ../finetune-ERP-backend-New && gunicorn --bind=0.0.0.0:5000 --reuse-port config.wsgi:application"]
build = ["bash", "-c", "pip install -e .[backend] && cd finetune-ERP-frontend-New && npm install --legacy-peer-deps && cd ../finetune-ERP-backend-New && python manage.py migrate && python manage.py collectstatic --noinput"]
